<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/colorPrimary</item>
        <item name="itemIconcolor">@color/grey</item>
        <item name="actionBarTheme">@style/ToolbarStyleL</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>          <!--burger, scroll, exit icon, spinner treangl-->
        <item name="itemIconTint">@color/black</item>
        <item name="bottomNavigationStyle">@style/BottomNavL</item>
        <item name="navigationViewStyle">@style/DrawerL</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonL</item>    <!--bottomnav icons-->
        <item name="android:textViewStyle">@style/TextViewL</item>
        <item name="snackbarStyle">@style/snackbarStyle</item>
        <item name="orangeButtonItemColor">@color/black</item>
        <item name="cardViewStyle">@style/cardViewL</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="snackbarStyle" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/colorLight</item>
    </style>
    <style name="TextViewL" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="ToolbarStyleL" parent="Widget.AppCompat.ActionBar">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/colorLight</item>
    </style>
    <style name="FloatingButtonL" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorFloatingBtn</item>
    </style>
    <style name="DrawerL" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/colorLight</item>
        <item name="itemBackground">@color/colorLight</item>
        <item name="itemTextColor">@color/black</item>
    </style>
    <style name="BottomNavL">
        <item name="android:background">@color/colorLight</item>
        <item name="itemIconTint">@color/navbar_item</item>
    </style>
    <style name="cardViewL" parent="CardView">
        <item name="cardBackgroundColor">@color/cardL</item>
    </style>


    <!--Night mode theme-->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryD</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkD</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/colorPrimaryD</item>
        <item name="itemIconcolor">#bdbdbd</item>
        <item name="actionBarTheme">@style/ToolbarStyleD</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#fcfcfc</item>
        <item name="itemIconTint">@color/white</item>
        <item name="bottomNavigationStyle">@style/BottomNavD</item>
        <item name="navigationViewStyle">@style/DrawerD</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonD</item>
        <item name="android:textViewStyle">@style/TextViewL</item>
        <item name="snackbarStyle">@style/snackbarStyleD</item>
        <item name="orangeButtonItemColor">@color/black</item>
        <item name="cardViewStyle">@style/cardViewD</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
    </style>

    <style name="cardViewD" parent="CardView">
        <item name="cardBackgroundColor">@color/cardD</item>
    </style>

    <style name="snackbarStyleD" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/lightBlack</item>
    </style>
    <style name="FloatingButtonD" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorFloatingBtn</item>
    </style>
    <style name="DrawerD" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/colorPrimaryD</item>
        <item name="itemBackground">@color/colorPrimaryD</item>
        <item name="itemTextColor">@color/white</item>
    </style>
    <style name="BottomNavD">
        <item name="android:background">@color/lightBlack</item>
        <item name="itemIconTint">@color/navbar_item_d</item>
    </style>
    <style name="ToolbarStyleD" parent="Widget.AppCompat.ActionBar">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/lightBlack</item>
    </style>

</resources>