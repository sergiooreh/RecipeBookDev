<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f5f5f5</item>
        <item name="colorPrimaryDark">#bdb9b7</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#f5f5f5</item>
        <item name="itemIconcolor">#616161</item>
        <item name="actionBarTheme">@style/ToolbarStyleL</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#000000</item>          <!--burger, scroll, exit icon, spinner treangl-->
        <item name="itemIconTint">#000000</item>
        <item name="bottomNavigationStyle">@style/BottomNavL</item>
        <item name="navigationViewStyle">@style/DrawerL</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonL</item><!--bottomnav icons-->
        <item name="android:textViewStyle">@style/TextViewL</item>

    </style>

    <style name="TextViewL" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/maven_pro</item>
    </style>
    <style name="ToolbarStyleL" parent="Widget.AppCompat.ActionBar">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#eeeeee</item>
    </style>
    <style name="FloatingButtonL" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">#718792</item>
    </style>
    <style name="DrawerL" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/colorLight</item>
        <item name="itemBackground">@color/colorLight</item>
        <item name="itemTextColor">#000000</item>
    </style>
    <style name="BottomNavL">
        <item name="android:background">#eeeeee</item>
    </style>


    <!--Night mode theme-->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/colorPrimary</item>
        <item name="itemIconcolor">#bdbdbd</item>
        <item name="actionBarTheme">@style/ToolbarStyleD</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#fcfcfc</item>
        <item name="itemIconTint">#ffffff</item>
        <item name="bottomNavigationStyle">@style/BottomNavD</item>
        <item name="navigationViewStyle">@style/DrawerD</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonD</item>
        <item name="android:textViewStyle">@style/TextViewL</item>
    </style>

    <style name="FloatingButtonD" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">#718792</item>
    </style>
    <style name="DrawerD" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemTextColor">#ffffff</item>
    </style>
    <style name="BottomNavD">
        <item name="android:background">#000a12</item>
    </style>
    <style name="ToolbarStyleD" parent="Widget.AppCompat.ActionBar">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:background">#000a12</item>
    </style>

</resources>